{
  "version": 2,
  "name": "mdxcms",
  "builds": [
    {
      "src": "www/next.config.js",
      "use": "@now/next"
    },
    {
      "src": "api/src/**/*.js",
      "use": "@now/node"
    },
    {
      "src": "assets/**/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/api/users",
      "dest": "/api/src/users/index.js"
    },   
    {
      "src": "/api/user/new",
      "dest": "/api/src/user/new.js"
    },
    {
      "src": "/api/document",
      "dest": "/api/src/document.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/www/$1"
    }
  ]
}